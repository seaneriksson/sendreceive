<script>
function displayData() {
fetch('/about')
    .then(response => response.json())
    .then(data => {
        let outputElement = document.getElementById("output");
        outputElement.innerHTML = data.shared_text.replace('\n', '<br>');
    })
        .catch(error => {
            console.error('Error:', error);
    });
}

window.onload = displayData;
</script>

    <h1 id=timeuntil>Time until updated result</h1>
    <p id="timer">15</p>

    <script>
        function startTimer() {
            let time = 15;

            function updateTimer() { // Time manager
                let seconds = time;
                document.getElementById("timer").textContent = `${seconds < 10 ? "0" : ""}${seconds}`;

                if (time > 0) {
                    time--;
                } else {
                    window.location.reload();
                }
            }

            setInterval(updateTimer, 1000);
        }
        startTimer();
    </script>

    <br><br>
    <button onclick="window.location.reload(true)">Refresh Now</button>
    <br><br>
    <button onclick="clearAll()">Clear All</button>

<script>
function clearAll() {
    fetch('/clear', { method: 'POST' })
        .then(() => window.location.reload());
}
</script>

